<% layout("/layouts/boilerplate")%>

  <body>
    <div class="row pt-4">
      <div class="col-8 offset-2">
        <div class="text-center mb-4">
          <h2 class="fw-bold">
            <%=listing.title%>
          </h2>
        </div>

        <div class="card listing-card show-card p-0 mb-5">
          <img src="<%=listing.image.url%>" class="card-img-top show-img" alt="listing_image" />
          <div class="card-body p-4">
            <div class="d-flex justify-content-between align-items-center mb-3">
              <span class="text-muted"><i class="fa-solid fa-user-circle"></i> Hosted by <%=listing.owner.username%>
              </span>
              <span class="badge bg-primary fs-6">
                <%=listing.category || 'Luxury' %>
              </span>
            </div>

            <p class="card-text lead">
              <%=listing.description%>
            </p>

            <div class="row mt-4 mb-4 p-3 bg-dark rounded border border-secondary" style="--bs-bg-opacity: .3;">
              <div class="col-md-6">
                <p><i class="fa-solid fa-map-pin text-danger"></i> <strong>Location:</strong>
                  <%=listing.location%>, <%=listing.country%>
                </p>
              </div>
              <div class="col-md-6 text-end">
                <h4 class="text-success">&#8377; <%=listing.price.toLocaleString("en-IN")%> <span
                      class="fs-6 text-muted">/ night</span></h4>
              </div>
            </div>

            <button class="btn btn-book w-100 py-3 fs-5" onclick="triggerAiBooking()">
              <i class="fa-solid fa-sparkles"></i> Request Book with Velora Agent
            </button>
          </div>
        </div>

        <%if(currUser && listing.owner._id.equals(currUser._id)){%>
          <div class="d-flex gap-3 mb-5">
            <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark flex-grow-1">Edit Configuration</a>
            <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE" class="flex-grow-1">
              <button class="btn btn-danger w-100">Delete Asset</button>
            </form>
          </div>
          <%}%>
      </div>

      <!-- Review Section - Wider Container -->
      <div class="col-10 offset-1 mb-5">
        <hr class="mb-5" style="border-color: rgba(255,255,255,0.1);">

        <%if(currUser){%>
          <div class="host-card p-4 mb-5 mx-auto" style="max-width: 800px;">
            <h4 class="fw-bold mb-4" style="color: #0f172a;"><i class="fa-solid fa-star text-warning me-2"></i>
              Leave a Review</h4>
            <form action="/listings/<%=listing.id%>/reviews" method="POST" novalidate class="needs-validation">
              <div class="mb-3">
                <label for="rating" class="host-label">Experience Rating</label>
                <fieldset class="starability-slot">
                  <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked
                    aria-label="No rating." />
                  <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                  <label for="first-rate1" title="Terrible">1 star</label>
                  <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                  <label for="first-rate2" title="Not good">2 stars</label>
                  <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                  <label for="first-rate3" title="Average">3 stars</label>
                  <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                  <label for="first-rate4" title="Very good">4 stars</label>
                  <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                  <label for="first-rate5" title="Amazing">5 stars</label>
                </fieldset>
              </div>

              <div class="mb-4">
                <label for="comment" class="host-label">Your Thoughts</label>
                <textarea name="review[comment]" id="comment" cols="30" rows="3" class="form-control host-input"
                  placeholder="Share your experience..." required></textarea>
                <div class="invalid-feedback">Please add some comments.</div>
              </div>

              <button class="btn btn-dark w-100 fw-bold py-2">Submit Review</button>
            </form>
          </div>
          <%}%>

            <% if(listing.reviews.length> 0) { %>
              <h4 class="mb-4 ps-2" style="color: black !important;"><b>Traveler Feedback</b></h4>
              <div class="row px-2">
                <%for(review of listing.reviews){%>
                  <div class="col-md-6 mb-4">
                    <div class="card h-100 border-0 shadow-sm" style="background: #f8fafc; border-radius: 20px;">
                      <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                          <h5 class="card-title fw-bold text-dark mb-0">@<%=review.author.username%>
                          </h5>
                          <p class="starability-result" data-rating="<%=review.rating%>"></p>
                        </div>
                        <p class="card-text text-secondary" style="font-weight: 500;">
                          <%=review.comment%>
                        </p>
                      </div>
                      <% if(currUser && review.author._id.equals(currUser._id)) { %>
                        <form class="p-3 pt-0" method="POST"
                          action="/listings/<%=listing._id%>/reviews/<%=review._id %>?_method=DELETE">
                          <button class="btn btn-sm btn-outline-danger rounded-pill px-3">Delete Review</button>
                        </form>
                        <% } %>
                    </div>
                  </div>
                  <%}%>
              </div>
              <% } %>
      </div>
    </div>

    <script>
      function triggerAiBooking() {
        const btn = document.querySelector('.btn-book');
        btn.innerHTML = `<i class="fa-solid fa-circle-notch fa-spin"></i> Velora is contacting the host...`;
        btn.disabled = true;
        setTimeout(() => {
          btn.innerHTML = `<i class="fa-solid fa-check"></i> Booking Requested!`;
          btn.classList.remove('btn-book');
          btn.classList.add('btn-success');
          alert("Velora has successfully sent your booking request to the host. Check your email for confirmation.");
        }, 2000);
      }
    </script>
  </body>