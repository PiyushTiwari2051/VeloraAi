<% layout("/layouts/boilerplate")%>

    <div class="auth-container">
        <div class="auth-card">
            <!-- Cosmic Glow Effect -->
            <div class="position-absolute top-0 start-0 w-100 h-100"
                style="background: radial-gradient(circle at 50% -20%, rgba(112, 0, 255, 0.15), transparent 70%); pointer-events: none;">
            </div>

            <div class="text-center mb-5 position-relative">
                <div class="ai-avatar mb-3 mx-auto" style="width: 60px; height: 60px; font-size: 1.8rem;">
                    <i class="fa-solid fa-right-to-bracket"></i>
                </div>
                <h2 class="fw-bold text-light mb-1" style="font-family: var(--font-heading);">Welcome Back</h2>
                <p class="text-muted small">Please access your dashboard below.</p>
            </div>

            <form action="/login" method="POST" novalidate class="needs-validation position-relative">
                <div class="mb-4">
                    <label for="username" class="form-label small text-secondary">USERNAME</label>
                    <div class="input-group">
                        <span class="input-group-text bg-transparent border-end-0 border-secondary text-secondary"><i
                                class="fa-solid fa-user"></i></span>
                        <input name="username" id="username" type="text" class="form-control border-start-0 ps-0"
                            required placeholder="Enter username"
                            style="background: rgba(255,255,255,0.05) !important; border-color: rgba(255,255,255,0.1) !important;" />
                        <div class="invalid-feedback">Please enter your username.</div>
                    </div>
                </div>

                <div class="mb-5">
                    <label for="password" class="form-label small text-secondary">PASSWORD</label>
                    <div class="input-group">
                        <span class="input-group-text bg-transparent border-end-0 border-secondary text-secondary"><i
                                class="fa-solid fa-lock"></i></span>
                        <input name="password" id="password" type="password" class="form-control border-start-0 ps-0"
                            required placeholder="Enter password"
                            style="background: rgba(255,255,255,0.05) !important; border-color: rgba(255,255,255,0.1) !important;" />
                        <div class="invalid-feedback">Please enter your password.</div>
                    </div>
                </div>

                <button class="btn btn-primary w-100 py-3 mb-3 fw-bold shadow-lg"
                    style="letter-spacing: 1px; background: linear-gradient(135deg, #8b5cf6 0%, #6d28d9 100%); border: none;">LOG
                    IN</button>

                <div class="text-center">
                    <p class="small text-secondary mb-0">New here? <a href="/signup"
                            class="text-white text-decoration-none fw-bold">Sign Up</a></p>
                </div>
            </form>
        </div>
    </div>